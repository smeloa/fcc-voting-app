/* GENERAL STYLES */

//Colors
white = #fff
red = #4d0000
yellow = #f0ad4e
lightyellow = #f9deb8
black = #000
darkgray = #35393e
lightgray = #b3bcc5
lightlightgray = #e2e6e9

html
	position relative
  	min-height 100%

body
	font-family 'Lato', sans-serif
	/*	Removing margins and paddings from the body, so that
    the sidebar takes the full height of the page */
	margin 0
	padding 0

.primary
	width 10%
	border-width 3px
	border-color yellow

.wrapper
	margin-bottom 10px

/* HOMEPAGE STYLES */

/* Nav */

.navbar
	background-color black
	p
		color yellow !important
	a
		color yellow !important
	a:hover
		color white !important

.login-buttons
	a:hover
		color lightyellow !important		

/* Jumbotron */

.jumbotron 
	width 100%
	height 600px
	background-image url("../img/HomeLayout-Jumbotron-Pencil.jpg")
	background-size 100%
	background-repeat no-repeat

.jumbotron-text
	width 100%
	color white
	margin-top 180px
	h1
		font-size 5em
		font-weigth 700	
	p	
		font-size 1.2em
		font-weigth 300		

@media (max-width: 900px) 
	.jumbotron
		height 300px

	.jumbotron-text
		margin-top 30px
		h1
			font-size 2em
		p	
			font-size 1.2em

/* Features*/

.soft-text
	font-weight 300

.icon-intro
	color yellow

/* Footer*/

.footer
	position absolute
	width 100%
	height 40px
	padding-top 10px
	background-color black
	a
		color yellow
		text-decoration none
	a:hover
		color white	


/* APP STYLES */

/* General Main Content */ 

.main-content 	
	max-width 600px
	padding-top 40px
	margin 0 0 40px 210px

/* SideNav */

.sidebar-left
	position fixed
	top 0
	left 0
	background-color black
	width 120px
	height 100%
	padding 20px 0


.sidebar-left .sidebar-links
	margin 80px auto

.sidebar-left .sidebar-links a 
	display block
	text-decoration none
	margin 0 auto 5px auto
	padding 20px 0
	background-color darkgray
	text-align center
	color  yellow
	font-size 1em
	font-weight 700
	border-left-width 2px
	border-left-style solid
	border-color yellow

.sidebar-left .sidebar-links a i.fa
	display block
	font-size 1.8em
	margin-bottom 5px


.sidebar-left .sidebar-links a.selected
	background-color lightyellow
	color darkgray
	cursor default

.link
	color yellow

.side-nav-logout
	margin 0 20px
	width 80px
	background-color darkgray
	border solid 1px yellow
	a
		color yellow
		font-size 1em


/* SideNav Media Queries aka Responsive */

@media (max-width: 900px) 
	.main-content
		max-width none
		padding 40px 20px
		margin 0 0 40px
	

	.sidebar-left
		width auto
		height auto
		position inherit
		padding 20px 0 0

	.sidebar-left .sidebar-links
		text-align center
		margin  auto 0

	.sidebar-left .sidebar-links a
		display inline-block
		width 100px
		margin 0
		padding 14px 0
		border-left none
		border-top-width: 2px
		border-top-style solid
	
	.side-nav-logout
		margin 0 auto

	.login-responsive
		margin-top 10px
		margin-bottom 10px	



